@model Team2Capstone.Models.MyEventsViewModel
@{
    ViewBag.Title = "MyEvents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="jumbotron">
    <h2 style="text-align: center">My Events</h2>
</div>
@Html.Partial("./SideNav")

<div class="well col-sm-10 col-md-10">
        <h3>Owned Events</h3>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Start Date
                </th>
                <th>
                    End Date
                </th>
                <th>
                    Location
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OwnedEvents)
            {
                <tr>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.StartDate
                    </td>
                    <td>
                        @item.EndDate
                    </td>
                    <td>
                        @item.Location
                    </td>
                </tr>
            }
        </tbody>

    </table>

    <br />
        <h3>Registered Events</h3>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Start Date
                </th>
                <th>
                    End Date
                </th>
                <th>
                    Location
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RegisteredEvents)
            {
                <tr>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.StartDate
                    </td>
                    <td>
                        @item.EndDate
                    </td>
                    <td>
                        @item.Location
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>